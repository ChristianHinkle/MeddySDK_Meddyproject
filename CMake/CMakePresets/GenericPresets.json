{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "x64-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "x86-base",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "macos-base",
            "hidden": true,
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 Debug",
            "inherits": [
                "base",
                "windows-base",
                "x64-base",
                "debug-base"
            ]
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 Release",
            "inherits": [
                "base",
                "windows-base",
                "x64-base",
                "release-base"
            ]
        },
        {
            "name": "windows-x86-debug",
            "displayName": "Windows x86 Debug",
            "inherits": [
                "base",
                "windows-base",
                "x86-base",
                "debug-base"
            ]
        },
        {
            "name": "windows-x86-release",
            "displayName": "Windows x86 Release",
            "inherits": [
                "base",
                "windows-base",
                "x86-base",
                "release-base"
            ]
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": [
                "base",
                "linux-base",
                "debug-base"
            ]
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": [
                "base",
                "linux-base",
                "release-base"
            ]
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "inherits": [
                "base",
                "macos-base",
                "debug-base"
            ]
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": [
                "base",
                "macos-base",
                "release-base"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-debug",
            "displayName": "Windows x64 Debug",
            "configurePreset": "windows-x64-debug"
        },
        {
            "name": "windows-x64-release",
            "displayName": "Windows x64 Release",
            "configurePreset": "windows-x64-release"
        },
        {
            "name": "windows-x86-debug",
            "displayName": "Windows x86 Debug",
            "configurePreset": "windows-x86-debug"
        },
        {
            "name": "windows-x86-release",
            "displayName": "Windows x86 Release",
            "configurePreset": "windows-x86-release"
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "configurePreset": "linux-release"
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "configurePreset": "macos-debug"
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "configurePreset": "macos-release"
        }
    ],
    "packagePresets": [
        {
            "name": "nsis-base",
            "hidden": true,
            "description": "Important: Make sure you modify your NSIS installation with the files from the \"strlen_8192\" version before running CPack! Or else the installer will fail to modify the PATH env var for most users, because variables in NSIS cannot exceed 1024 characters by default, and PATH env vars tend to be very lengthy.",
            "generators": [
                "NSIS"
            ]
        }
    ]
}
